<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="300dp"
    android:layout_height="230dp"
    tools:context=".createChat"
    android:background="@drawable/back_for_wind"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/titleCreateChat"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Chat"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/kavoon"

        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backBlokEditNameFromCreate"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back_block_edit_pass_from_checking"

        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCreateChat"
        >

        <EditText
            android:id="@+id/editTextChatName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:fontFamily="@font/kavoon"
            android:hint="Name..."
            android:textColor="@color/black"

            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp"

            android:backgroundTint="@color/color_back_pa"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backBlokEditPassFromCreate"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back_block_edit_pass_from_checking"

        android:layout_marginHorizontal="1dp"

        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBlokEditNameFromCreate"
        >

        <EditText
            android:id="@+id/editTextPass"

            android:inputType="textPassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Pass..."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/kavoon"

            android:layout_marginTop="5dp"

            android:backgroundTint="@color/color_back_pa"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnCreateChat"
        android:layout_width="50dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"

        >

        <ImageView
            android:src="@drawable/baseline_check_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>