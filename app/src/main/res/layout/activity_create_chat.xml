<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".createChat"
    android:layout_width="300dp"
    android:layout_height="230dp"
    android:background="@drawable/btn_from_reg_and_log"
    android:layout_gravity="center"
    android:elevation="15dp"
    >

    <TextView
        android:id="@+id/titleCreateChat"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Создание чата"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/oxygen_mono"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backBlokEditNameFromCreate"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/edit_texts_back"

        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCreateChat"
        >

        <EditText
            android:id="@+id/editTextChatName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:backgroundTint="@color/black"
            android:fontFamily="@font/oxygen_mono"
            android:textStyle="bold"
            android:hint="Название..."
            android:textColor="@color/black"

            android:textColorHint="@color/black"
            android:textSize="20dp"



            tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backBlokEditPassFromCreate"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/edit_texts_back"

        android:layout_marginHorizontal="10dp"

        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBlokEditNameFromCreate"
        >

        <EditText
            android:id="@+id/editTextPass"

            android:inputType="textPassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Пароль..."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:fontFamily="@font/oxygen_mono"
            android:textStyle="bold"

            android:layout_marginTop="5dp"

            android:minLines="6"

            android:backgroundTint="@color/black"

            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnCreateChat"
        android:layout_width="50dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        >

        <ImageView
            android:src="@drawable/baseline_check_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>