<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="250dp"
    android:layout_height="240dp"
    tools:context=".chatInfo"
    android:background="@drawable/btn_from_reg_and_log"
    android:elevation="15dp"
    android:layout_gravity="center"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_show_qr"

        android:layout_width="200dp"
        android:layout_height="50dp"

        android:background="@drawable/btn_in_info"

        android:elevation="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="QR-код"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/oxygen_mono"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_show_info_about_chat_in_dial"

        android:layout_width="200dp"
        android:layout_height="50dp"

        android:background="@drawable/btn_in_info"

        android:elevation="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_qr"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Показать инфо"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/oxygen_mono"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_clear_chat_in_dial"

        android:layout_width="200dp"
        android:layout_height="50dp"

        android:background="@drawable/btn_in_info_clear"

        android:elevation="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Очистить чат"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/oxygen_mono"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>