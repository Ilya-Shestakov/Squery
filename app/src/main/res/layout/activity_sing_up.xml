<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sing_up"

    android:background="@color/background"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_with_sing_up"

        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="@color/white"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/title_of_sing_up"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:paddingStart="10dp"

            android:text="Sing up"
            android:textColor="@color/black"
            android:fontFamily="@font/kavoon"
            android:textSize="35dp"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/back_blok"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back_blok"

        android:elevation="10dp"

        android:layout_marginTop="100dp"

        app:layout_constraintTop_toBottomOf="@+id/title_with_sing_up"

        android:paddingBottom="10dp"
        >

        <EditText
            android:id="@+id/edit_email_sing_up"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="10dp"


            android:textColor="@color/black"

            android:hint="Email..."

            android:fontFamily="@font/kavoon"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:paddingStart="20dp"

            />

        <EditText

            android:minLines="9"

            android:id="@+id/edit_pass_sing_up"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/edit_email_sing_up"

            android:inputType="textPassword"

            android:textColor="@color/black"

            android:hint="Pass..."

            android:fontFamily="@font/kavoon"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:paddingStart="20dp"

            android:layout_marginTop="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/shadow_for_sing_up"

        android:layout_width="0dp"
        android:layout_height="70dp"

        app:layout_constraintStart_toStartOf="@+id/btn_sing_up_of_sing_up"
        app:layout_constraintEnd_toEndOf="@+id/btn_sing_up_of_sing_up"
        app:layout_constraintTop_toTopOf="@+id/btn_sing_up_of_sing_up"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sing_up_of_sing_up"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="-5dp"

        android:background="@drawable/shadow_for_sing_out_and_in"

        />


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/btn_sing_up_of_sing_up"
        android:onClick="sing_in_of_sing_up"

        android:layout_width="250dp"
        android:layout_height="70dp"

        android:layout_gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_blok"
        android:layout_marginTop="50dp"

        android:background="@drawable/btn_from_reg_and_log"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Next"
            android:textColor="@color/black"
            android:textSize="25sp"

            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"

            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>